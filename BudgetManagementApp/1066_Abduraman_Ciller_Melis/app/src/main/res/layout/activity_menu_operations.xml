<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MenuOperationsLinear"
    android:background="@drawable/background4"
    tools:context="com.example.ciller.pm.MenuOperations">


    <GridLayout
        android:id="@+id/gridLayoutMenuOperations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVMenuOperations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_columnSpan="4"
            android:layout_row="1"
            android:textSize="18dp"
            android:text="@string/messagewelcome"
            android:textColor="@color/colorRegister"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_row="2"
            android:src="@drawable/icon_menu" />

        <Button
            android:id="@+id/butonDebt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="2"
            android:text="@string/debtsMenu"
            android:textStyle="bold"
            android:onClick="adaugaDatorie"
            android:background="@drawable/button_green"/>

        <ImageView
            android:id="@+id/imageViewMenu2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="3"
            android:src="@drawable/menu_icon2" />

        <Button
            android:id="@+id/butonStatus"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_row="3"
            android:text="@string/statusMenu"
            android:textStyle="bold"
            android:background="@drawable/button_green"
            android:onClick="spreLista"
            />

        <ImageView
            android:id="@+id/imageViewMenu3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="4"
            android:src="@drawable/wish_icon" />

        <Button
            android:id="@+id/butonWishList"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_row="4"
            android:text="@string/wishList"
            android:textStyle="bold"
            android:background="@drawable/button_green"
            android:onClick="spreBooks"
            />

        <ImageView
            android:id="@+id/imageViewMenu4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="5"
            android:src="@drawable/icon_feedback" />

        <Button
            android:id="@+id/butonReview"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_row="5"
            android:text="@string/butonReview"
            android:textStyle="bold"
            android:background="@drawable/button_green"
            android:onClick="spreReview"
            />

        <ImageView
            android:id="@+id/imageViewMenu5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_row="6"
            android:src="@drawable/icon_feedback" />

        <Button
            android:id="@+id/butonReceivables"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_row="6"
            android:text="@string/butonReceivables"
            android:textStyle="bold"
            android:background="@drawable/button_green"
            android:onClick="spreReceivables"
            />


    </GridLayout>

</ScrollView>
