<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_books"
    tools:context="com.example.ciller.pm.Books_WishList">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/LLbooks"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageBooks"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:src="@drawable/books" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBooksList"
        android:text="@string/tvBooks"
        android:textColor="@color/colorRegister"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        />

    <!--
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewBooks">
    </ListView>

    -->
    <TextView
        android:id="@+id/tvid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/colorRegister"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        />

</LinearLayout>

</ScrollView>
